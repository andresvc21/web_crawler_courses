{
  "project_info": {
    "name": "Genesys Learning Content Extractor",
    "description": "Unified extraction tool for Genesys learning content with integrated target audience detection",
    "version": "2.2.0"
  },
  "course_types": {
    "e-learning": {
      "name": "E-Learning Courses",
      "description": "Interactive online learning modules",
      "input_file": "data/input/elearning_courses_list.txt",
      "url_base": "https://beyond.genesys.com/explore/course/",
      "extraction_settings": {
        "wait_time": 12,
        "use_browser_automation": true,
        "extract_target_audience": true,
        "extract_duration": true,
        "extract_course_outline": true,
        "extract_descriptions": true
      },
      "output_files": {
        "csv": "data/output/current/genesys_elearning_complete_dataset.csv",
        "json": "data/output/current/genesys_elearning_complete_dataset.json"
      },
      "css_selectors": {
        "description": [
          "div.course-description",
          "div.description",
          ".course-content p",
          ".main-content p"
        ],
        "target_audience": [
          "div.target-audience",
          "div.intended-audience"
        ],
        "course_outline": [
          "div.course-outline",
          "div.learning-objectives"
        ]
      }
    },
    "webinars": {
      "name": "Webinars",
      "description": "Live and recorded webinar sessions",
      "input_file": "data/input/webinars_list.txt",
      "url_base": "https://beyond.genesys.com/explore/webinar/",
      "extraction_settings": {
        "wait_time": 8,
        "use_browser_automation": true,
        "extract_target_audience": true,
        "extract_duration": true,
        "extract_course_outline": false,
        "extract_descriptions": true
      },
      "output_files": {
        "csv": "data/output/current/genesys_webinars_complete_dataset.csv",
        "json": "data/output/current/genesys_webinars_complete_dataset.json"
      },
      "css_selectors": {
        "description": [
          "div.webinar-description",
          "div.description",
          ".webinar-content p"
        ],
        "target_audience": [
          "div.target-audience",
          "div.intended-audience"
        ]
      }
    },
    "self-study": {
      "name": "Self-Study Materials",
      "description": "Self-paced study materials and documentation",
      "input_file": "data/input/self_study_list.txt",
      "url_base": "https://beyond.genesys.com/explore/study/",
      "extraction_settings": {
        "wait_time": 6,
        "use_browser_automation": true,
        "extract_target_audience": true,
        "extract_duration": false,
        "extract_course_outline": true,
        "extract_descriptions": true
      },
      "output_files": {
        "csv": "data/output/current/genesys_self_study_complete_dataset.csv",
        "json": "data/output/current/genesys_self_study_complete_dataset.json"
      },
      "css_selectors": {
        "description": [
          "div.study-description",
          "div.description",
          ".study-content p"
        ],
        "target_audience": [
          "div.target-audience",
          "div.intended-audience"
        ],
        "course_outline": [
          "div.study-outline",
          "div.topics"
        ]
      }
    }
  },
  "global_settings": {
    "chrome_driver_path": "drivers/chromedriver.exe",
    "progress_save_interval": 20,
    "max_retries": 3,
    "output_encoding": "utf-8",
    "browser_settings": {
      "headless": false,
      "window_size": "1920,1080",
      "disable_gpu": true,
      "no_sandbox": true
    }
  },
  "combined_output": {
    "create_combined_dataset": true,
    "combined_files": {
      "csv": "data/output/combined/genesys_all_learning_content_dataset.csv",
      "json": "data/output/combined/genesys_all_learning_content_dataset.json"
    }
  }
}